<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">


    <TextView
        android:id="@+id/surname_key"
        android:layout_width="78dp"
        android:layout_height="31dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:text="Surname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/surname_value"
        android:layout_width="303dp"
        android:layout_height="29dp"
        android:layout_marginTop="44dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/surname_key"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/othernames_key"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:text="Other Names"
        app:layout_constraintStart_toStartOf="@+id/surname_key"
        app:layout_constraintTop_toBottomOf="@+id/surname_key" />

    <TextView
        android:id="@+id/othernames_value"
        android:layout_width="305dp"
        android:layout_height="37dp"
        android:layout_marginTop="36dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/surname_value"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/othernames_key"
        app:layout_constraintTop_toBottomOf="@+id/surname_value" />

    <TextView
        android:id="@+id/id_key"
        android:layout_width="72dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:text="ID"
        app:layout_constraintStart_toStartOf="@+id/othernames_key"
        app:layout_constraintTop_toBottomOf="@+id/othernames_key" />

    <TextView
        android:id="@+id/id_value"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="48dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_key"
        app:layout_constraintTop_toBottomOf="@+id/othernames_value" />

    <TextView
        android:id="@+id/acc_number_key"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:text="Account Number"
        app:layout_constraintStart_toStartOf="@+id/id_key"
        app:layout_constraintTop_toBottomOf="@+id/id_key" />

    <TextView
        android:id="@+id/acc_number_value"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="28dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toEndOf="@+id/acc_number_key"
        app:layout_constraintTop_toBottomOf="@+id/id_value" />

    <TextView
        android:id="@+id/branch_key"
        android:layout_width="77dp"
        android:layout_height="39dp"
        android:layout_marginTop="56dp"
        android:text="Branch"
        app:layout_constraintStart_toStartOf="@+id/acc_number_key"
        app:layout_constraintTop_toBottomOf="@+id/acc_number_key" />

    <TextView
        android:id="@+id/branch_value"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="48dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/acc_number_value"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/branch_key"
        app:layout_constraintTop_toBottomOf="@+id/acc_number_value" />
</androidx.constraintlayout.widget.ConstraintLayout>